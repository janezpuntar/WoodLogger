<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="BlackText" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DarkBrownText" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="LightBrownText" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/divider_color</item>
    </style>


    <style name="BlackText.Small">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="BlackText.Medium">
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="BlackText.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BlackText.Large">
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="BlackText.Huge">
        <item name="android:textSize">@dimen/huge_text</item>
    </style>

    <style name="DarkBrownText.Large">
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="LightBrownText.Small">
        <item name="android:textSize">@dimen/small_text</item>
    </style>



</resources>
