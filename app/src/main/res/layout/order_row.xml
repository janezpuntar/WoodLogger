<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="@dimen/left_right_offset_half"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/left_right_offset_half"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textAppearance="@style/DarkBrownText.Large"
            tools:text="Title Ti tle T itle Tit le Ti tle Ti tle"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_order_total_volume"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/BlackText.Huge"
                tools:text="43m"
                />

            <TextView
                android:id="@+id/tv_order_date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_order_total_volume"
                android:layout_toStartOf="@id/tv_order_total_volume"
                android:textAppearance="@style/LightBrownText.Small"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                tools:text="23.23.1023 23:24"
                />

            <TextView
                android:id="@+id/tv_order_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_total_volume"
                android:textAppearance="@style/BlackText.Medium"
                tools:text="descr iptino des"
                />

        </RelativeLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>